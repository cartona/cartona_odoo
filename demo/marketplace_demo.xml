<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Demo Marketplace Configuration -->
        <record id="demo_marketplace_cartona" model="marketplace.config">
            <field name="name">Cartona Marketplace (Demo)</field>
            <field name="api_base_url">https://supplier-integrations.cartona.com/api/v1/</field>
            <field name="auth_token">demo_token_replace_with_real_token</field>
            <field name="auth_header">AuthorizationToken</field>
            <field name="active">False</field>
            <field name="auto_sync_products">True</field>
            <field name="auto_sync_stock">True</field>
            <field name="auto_sync_prices">True</field>
            <field name="auto_pull_orders">True</field>
            <field name="sync_interval">15</field>
            <field name="batch_size">50</field>
            <field name="retry_attempts">3</field>
            <field name="timeout">30</field>
            <field name="connection_status">not_tested</field>
        </record>

        <!-- Demo Amazon Marketplace Configuration -->
        <record id="demo_marketplace_amazon" model="marketplace.config">
            <field name="name">Amazon Cartona Marketplace (Demo)</field>
            <field name="api_base_url">https://sellingpartnerapi.amazon.com/v1/</field>
            <field name="auth_token">demo_amazon_token_replace_with_real_token</field>
            <field name="auth_header">Authorization</field>
            <field name="active">False</field>
            <field name="auto_sync_products">True</field>
            <field name="auto_sync_stock">True</field>
            <field name="auto_sync_prices">False</field>
            <field name="auto_pull_orders">True</field>
            <field name="sync_interval">30</field>
            <field name="batch_size">25</field>
            <field name="retry_attempts">5</field>
            <field name="timeout">60</field>
            <field name="connection_status">not_tested</field>
        </record>

    </data>
</odoo>
